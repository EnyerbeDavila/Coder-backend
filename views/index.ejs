<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Mi Aplicación con Sockets</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/main.js"></script>
</head>

<body class="bg-secondary bg-gradient">
    <h1>Cliente Websockets</h1>

    <div class="container mt-3">
      <div class="jumbotron">
        <h2 style="color: red">Ingrese su Objeto</h2>
        <br/>
        <form  onsubmit="return false">
          <div class="form-group">
            <label for="nombre"><b>Nombre</b></label>
            <input id="nombre" class="form-control" type="text" name="nombre" />
          </div>
          <div class="form-group">
            <label for="precio"><b>Precio</b></label>
            <input id="precio" class="form-control" type="number" name="precio" />
          </div>
          <div class="form-group">
            <label for="urlfoto"><b>Foto del Objeto</b></label>
            <input id="urlfoto" class="form-control" type="text" name="urlfoto"/>
          </div>
          <button onclick="addProduct()" class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
      </div>
    </div>

    <div>
      <h2>Lista de objetos</h2>
    <div class="table-responsive">
        <table  class="table table-dark" id="tabla"></table>
    </div>
      <!-- <%- include('./partials/tabla.ejs', productos) %> -->
    </div>
    
    <div class="bg-dark bg-gradient text-white">
      <h1>Chat para Clientes</h1>
      <div id="mensajes"></div>
      <form onsubmit="return addMessage(this)">
        <input class="rounded" type="text" id="email" placeholder="Tu Email" />
        <input class="rounded" type="text" id="texto" placeholder="Cuéntanos algo..." />
        <input class="rounded" type="submit" value="Enviar"/>
      </form> 
      <br>
    </div>
</body>

</html>